{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "debug build",
      "type": "shell",
      "command": "odin build src -debug -out:build/${workspaceFolderBasename}.exe",
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "debug build and run",
      "type": "shell",
      "command": "odin run src -debug -out:build/${workspaceFolderBasename}.exe",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
